{
  "name": "intrinsisch",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "sass --no-source-map ./src/index.scss ./dist/intrinsisch.css",
    "format": "prettier --write ./src/**/*.scss",
    "lint": "stylelint --fix ./src/**/*.scss",
    "test": "pnpm /^test:.*/",
    "test:format": "prettier --check ./src/**/*.scss",
    "test:lint": "stylelint ./src/**/*.scss"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "stylelint": "^16.4.0",
    "stylelint-config-standard-scss": "^13.1.0"
  }
}
